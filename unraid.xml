<Container>
    <Name>kemono-dl</Name>
    <Repository>ghcr.io/ci7lus/kemono-dl</Repository>
    <Registry>docker.io</Registry>
    <Network>bridge</Network>
    <Privileged>false</Privileged>
    <Support>https://github.com/ci7lus/kemono-dl</Support>
    <Icon>https://avatars.githubusercontent.com/u/83240512?s=200&v=4</Icon>
    <ExtraParams>--name kemono-dl -p 8080:8080</ExtraParams>
    <WebUI>http://[IP]:[PORT]</WebUI>
    <Config Name="TZ" Target="/etc/TZ">America/New_York</Config>
    <Config Name="cookies" Target="/config/cookies.txt"></Config>
    <Config Name="links" Target="/config/links.txt"></Config>
    <Config Name="download_dir" Target="/downloads"></Config> <!-- New config for download directory -->
    <LogPath>/config/kemono-dl.log</LogPath>
    <FileDir>config</FileDir>
    <Category>Other</Category>
    <RestartPolicy>always</RestartPolicy>
</Container>
